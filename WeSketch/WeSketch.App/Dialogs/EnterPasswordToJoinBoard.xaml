<UserControl x:Class="WeSketch.App.Dialogs.EnterPasswordToJoinBoard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeSketch.App.Dialogs"
             mc:Ignorable="d" d:DesignWidth="300" Height="82">
    <Grid Margin="0,0,0,16">
        <Grid.Resources>
        </Grid.Resources>
        <Grid.RowDefinitions >
            <RowDefinition Height="39"></RowDefinition>
            <RowDefinition Height="27"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Height="16" Margin="0,10,0,13">Enter password:</TextBlock>
        <PasswordBox Name="PasswordBox" Height="26" VerticalAlignment="Center" Grid.Column="1" Grid.Row="0" Margin="0,4,5,9"/>
        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal">
            <Button IsDefault="True" Width="70" x:Name="btnJoin" Margin="0,0,5,0" Content="Join"/>
            <Button x:Name="btnCancel" Width="70" Content="Cancel"/>
        </StackPanel>

    </Grid>
</UserControl>
